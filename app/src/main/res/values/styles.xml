<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- ShapeAppearance per angoli arrotondati in alto -->
    <style name="ShapeAppearance.TopRounded" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">15dp</item>
        <item name="cornerSizeTopRight">15dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <!-- ShapeAppearance per angoli arrotondati in basso -->
    <style name="ShapeAppearance.BottomRounded" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomLeft">10dp</item>
        <item name="cornerSizeBottomRight">10dp</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
    </style>

    <!-- Tutti gli angoli arrotondati -->
    <style name="ShapeAppearance.Rounded" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomLeft">10dp</item>
        <item name="cornerSizeBottomRight">10dp</item>
        <item name="cornerSizeTopRight">10dp</item>
        <item name="cornerSizeTopLeft">10dp</item>
    </style>

    <style name="ShapeAppearance.LeftRounded" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">20dp</item>
        <item name="cornerSizeBottomLeft">20dp</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <style name="ShapeAppearance.RightRounded" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">20dp</item>
        <item name="cornerSizeBottomRight">20dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="MyLeftRoundedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.LeftRounded</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="strokeColor">@color/dark_gray</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:textColor">@color/light_gray</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="MyRightRoundedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.RightRounded</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="strokeColor">@color/dark_gray</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:textColor">@color/light_gray</item>
        <item name="android:textSize">18sp</item>
    </style>


    <!-- Bottone arrotondato in basso -->
    <style name="RoundedButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/sky</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.BottomRounded</item>
        <item name="rippleColor">?attr/colorControlHighlight</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:elevation">50dp</item>
    </style>

    <!-- Titolo di sezione -->
    <style name="SectionTitle" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">25dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">google_sans_regular</item>
        <item name="fontFamily">sans-google_sans_regular</item>
        <item name="android:gravity">top|center_horizontal</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <!-- Dialog trasparente -->
    <style name="Theme.TransparentDialog" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
    </style>

    <!-- Indicatori a puntini per TabLayout -->
    <style name="Exercise.DotIndicator" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabRippleColor">@null</item>
        <item name="tabIndicatorFullWidth">false</item>
        <item name="tabMode">fixed</item>
        <item name="tabGravity">center</item>
    </style>

    <!-- Icona circolare (es. immagine profilo) -->
    <style name="CircleImage" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- Bottone con stile personalizzato completo -->
    <style name="Widget.App.UltraButton" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">12dp</item>
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">@color/dark_gray</item>
        <item name="backgroundTint">@color/sky</item>
        <item name="rippleColor">@color/white</item>
        <item name="android:elevation">8dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="iconPadding">12dp</item>
        <item name="iconGravity">textStart</item>
    </style>

    <!-- Shape appearance custom per login -->
    <style name="ShapeAppearance.App.Button" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">30dp</item>
        <item name="cornerSizeTopRight">6dp</item>
        <item name="cornerSizeBottomRight">30dp</item>
        <item name="cornerSizeBottomLeft">6dp</item>
    </style>

    <!-- Stile per pulsante login -->
    <style name="Widget.App.LoginButton" parent="Widget.MaterialComponents.Button">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.App.Button</item>
        <item name="backgroundTint">@color/sky</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="strokeColor">@color/white</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
