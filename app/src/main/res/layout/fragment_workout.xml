<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp">

        <!-- BTN 4 in alto -->
        <FrameLayout
            android:id="@+id/stretchingContainer"
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <Button
                android:id="@+id/btnItem4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="STRETCHING"
                android:textSize="30dp"
                android:textColor="@color/sky"
                android:backgroundTint="@color/dark_gray"
                android:elevation="8dp"
                android:outlineAmbientShadowColor="@color/sky"
                android:outlineSpotShadowColor="@color/sky"
                app:strokeColor="@color/black"
                android:layout_marginTop="28dp"
                app:strokeWidth="1dp" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:elevation="100dp"
                android:src="@drawable/stretchingmanichino"
                android:layout_gravity="top|center_horizontal"
                android:layout_marginTop="28dp" />
        </FrameLayout>

        <!-- BTN1 a sinistra -->
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/stretchingContainer"
            app:layout_constraintStart_toStartOf="parent">

            <Button
                android:id="@+id/btnItem1"
                android:layout_width="165dp"
                android:layout_height="210dp"
                android:text="PESI"
                android:textSize="30dp"
                android:textColor="@color/sky"
                android:backgroundTint="@color/dark_gray"
                android:elevation="8dp"
                android:outlineAmbientShadowColor="@color/sky"
                android:outlineSpotShadowColor="@color/sky" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:elevation="100dp"
                android:src="@drawable/pesimanichino"
                android:layout_gravity="top|center_horizontal"
                android:layout_marginTop="48dp" />
        </FrameLayout>

        <!-- SWITCH2 sotto BTN1 -->
        <ImageSwitcher
            android:id="@+id/imageSwitcher2"
            android:layout_width="165dp"
            android:layout_height="130dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginVertical="340dp"
            android:elevation="8dp"
            android:outlineAmbientShadowColor="@color/sky"
            android:outlineSpotShadowColor="@color/sky"
            android:inAnimation="@android:anim/fade_in"
            android:outAnimation="@android:anim/fade_out"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- SWITCH1 a destra -->
        <ImageSwitcher
            android:id="@+id/imageSwitcher1"
            android:layout_width="165dp"
            android:layout_height="130dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="16dp"
            android:elevation="8dp"
            android:outlineAmbientShadowColor="@color/sky"
            android:outlineSpotShadowColor="@color/sky"
            android:inAnimation="@android:anim/fade_in"
            android:outAnimation="@android:anim/fade_out"
            app:layout_constraintTop_toBottomOf="@id/stretchingContainer"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- BTN2 sotto SWITCH1 -->
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginVertical="270dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <Button
                android:id="@+id/btnItem2"
                android:layout_width="165dp"
                android:layout_height="210dp"
                android:text="CORPO LIBERO"
                android:textSize="30dp"
                android:textColor="@color/sky"
                android:backgroundTint="@color/dark_gray"
                android:elevation="8dp"
                android:translationZ="8dp"
                android:outlineAmbientShadowColor="@color/sky"
                android:outlineSpotShadowColor="@color/sky" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:elevation="100dp"
                android:src="@drawable/crunchmanichino"
                android:layout_gravity="top|center_horizontal"
                android:layout_marginTop="38dp" />
        </FrameLayout>

        <!-- BTN3 in basso -->
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/imageSwitcher2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <Button
                android:id="@+id/btnItem3"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:text="CARDIO"
                android:textSize="30dp"
                android:textColor="@color/sky"
                android:backgroundTint="@color/dark_gray"
                android:elevation="8dp"
                android:translationZ="12dp"
                android:outlineAmbientShadowColor="@color/sky"
                android:outlineSpotShadowColor="@color/sky"
                app:strokeColor="@color/black"
                app:strokeWidth="1dp" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:elevation="100dp"
                android:src="@drawable/corsamanichino"
                android:layout_gravity="top|center_horizontal"
                android:layout_marginTop="8dp" />
        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
