<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_gravity="center_vertical"
        android:paddingBottom="16dp">

        <!-- BTN4 (Stretching) in alto a sinistra -->
        <FrameLayout
            android:id="@+id/btnItem4"
            android:layout_width="170dp"
            android:layout_height="250dp"
            android:layout_marginStart="16dp"
            android:clickable="true"
            android:focusable="true"
            android:elevation="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="@drawable/stretching"
                android:contentDescription="STRETCHING"
                android:clickable="false"
                android:focusable="false" />

            <!-- Rettangolo semitrasparente nella metÃ  bassa -->
            <View
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="bottom"
                android:alpha="0.5"

                android:background="@color/navy_blue" />

            <!-- Testo centrato nel rettangolo -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:text="STRETCHING"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

        </FrameLayout>

        <!-- BTN3 (Cardio) in alto a destra -->
        <FrameLayout
            android:id="@+id/btnItem3"
            android:layout_width="170dp"
            android:layout_height="250dp"
            android:layout_marginEnd="16dp"
            android:clickable="true"
            android:focusable="true"
            android:elevation="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="@drawable/cardio"
                android:contentDescription="CARDIO"
                android:clickable="false"
                android:focusable="false" />

            <View
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="bottom"
                android:alpha="0.5"
                android:background="@color/yellow"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:text="CARDIO"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

        </FrameLayout>

        <!-- BTN1 (Pesi) in basso a sinistra -->
        <FrameLayout
            android:id="@+id/btnItem1"
            android:layout_width="170dp"
            android:layout_height="250dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:clickable="true"
            android:focusable="true"
            android:elevation="8dp"
            app:layout_constraintTop_toBottomOf="@id/btnItem4"
            app:layout_constraintStart_toStartOf="parent">

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="@drawable/manubrio"
                android:contentDescription="PESI"
                android:clickable="false"
                android:focusable="false" />

            <View
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="bottom"
                android:alpha="0.5"
                android:background="@color/lightRed" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:text="PESI"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

        </FrameLayout>

        <!-- BTN2 (Corpo Libero) in basso a destra -->
        <FrameLayout
            android:id="@+id/btnItem2"
            android:layout_width="170dp"
            android:layout_height="250dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            android:clickable="true"
            android:focusable="true"
            android:elevation="8dp"
            app:layout_constraintTop_toBottomOf="@id/btnItem3"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="@drawable/pallamedica"
                android:contentDescription="CORPO LIBERO"
                android:clickable="false"
                android:focusable="false" />

            <View
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="bottom"
                android:alpha="0.5"
                android:background="@color/green" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:text="CORPO LIBERO"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
