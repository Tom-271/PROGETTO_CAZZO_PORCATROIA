<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="80dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Titolo con il nome dell'allievo -->
    <TextView
        android:id="@+id/textUserTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Allievo"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="70dp"
        android:textColor="@color/white"
        android:paddingBottom="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp"/>

    <!-- MaterialCalendarView -->
    <com.prolificinteractive.materialcalendarview.MaterialCalendarView
        android:id="@+id/calendarView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/textUserTitle"
        app:layout_constraintBottom_toTopOf="@+id/btnFancy"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnFancy"
        android:layout_width="280dp"
        android:layout_height="80dp"
        android:layout_marginBottom="124dp"
        android:paddingVertical="12dp"
        android:backgroundTint="@color/navy_blue"
        android:text="Compila la scheda al tuo allievo!"
        android:visibility="invisible"
        app:strokeColor="@color/orange"
        app:strokeWidth="0.6dp"
        android:textColor="@color/white"
        app:cornerRadius="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
