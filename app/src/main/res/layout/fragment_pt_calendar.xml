<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ui.home.PTcalendar">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp">

        <!-- Titolo con nome utente -->
        <TextView
            android:id="@+id/textUserTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="35sp"
            android:textColor="@color/orange"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Pulsanti navigazione settimana -->
        <LinearLayout
            android:id="@+id/btnPrevNextContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/textUserTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <Button
                android:id="@+id/btnPrevWeek"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="⟵ Indietro" />

            <Space
                android:layout_width="32dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btnNextWeek"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Avanti ⟶" />
        </LinearLayout>

        <!-- Container giorni -->
        <LinearLayout
            android:id="@+id/daysContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            app:layout_constraintTop_toBottomOf="@id/btnPrevNextContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Lunedì -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardMonday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:backgroundTint="@color/light_gray"
                app:cardCornerRadius="16dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/navy_blue">

                <TextView
                    android:id="@+id/textMonday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:text="LUNEDÌ"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"/>
            </com.google.android.material.card.MaterialCardView>

            <!-- Martedì -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardTuesday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:backgroundTint="@color/light_gray"
                app:cardCornerRadius="16dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/navy_blue">

                <TextView
                    android:id="@+id/textTuesday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:text="MARTEDÌ"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"/>
            </com.google.android.material.card.MaterialCardView>

            <!-- Mercoledì -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardWednesday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:backgroundTint="@color/light_gray"
                app:cardCornerRadius="16dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/navy_blue">

                <TextView
                    android:id="@+id/textWednesday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:text="MERCOLEDÌ"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"/>
            </com.google.android.material.card.MaterialCardView>

            <!-- Giovedì -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardThursday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:backgroundTint="@color/light_gray"
                app:cardCornerRadius="16dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/navy_blue">

                <TextView
                    android:id="@+id/textThursday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:text="GIOVEDÌ"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"/>
            </com.google.android.material.card.MaterialCardView>

            <!-- Venerdì -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardFriday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:backgroundTint="@color/light_gray"
                app:cardCornerRadius="16dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/navy_blue">

                <TextView
                    android:id="@+id/textFriday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:text="VENERDÌ"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"/>
            </com.google.android.material.card.MaterialCardView>

            <!-- Sabato -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardSaturday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:backgroundTint="@color/light_gray"
                app:cardCornerRadius="16dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/navy_blue">

                <TextView
                    android:id="@+id/textSaturday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:text="SABATO"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"/>
            </com.google.android.material.card.MaterialCardView>

            <!-- Domenica -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardSunday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:backgroundTint="@color/light_gray"
                app:cardCornerRadius="16dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/navy_blue">

                <TextView
                    android:id="@+id/textSunday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:text="DOMENICA"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"/>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <!-- Bottone finale -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnFancy"
            android:layout_width="280dp"
            android:layout_height="80dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="32dp"
            android:paddingVertical="12dp"
            android:backgroundTint="@color/navy_blue"
            app:strokeColor="@color/dark_gray"
            app:strokeWidth="0.6dp"
            android:textColor="@color/white"
            app:cornerRadius="16dp"
            android:visibility="invisible"
            app:layout_constraintTop_toBottomOf="@id/daysContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
