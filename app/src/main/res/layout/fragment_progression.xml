<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipeRefresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Unico figlio: ConstraintLayout contenitore -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rootContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Contenuto scrollabile -->
        <ScrollView
            android:id="@+id/scrollProgression"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fillViewport="true"
            android:clipToPadding="false"
            android:paddingBottom="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/progressionContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="0dp">

                <!-- Titolo principale -->
                <TextView
                    android:id="@+id/TitleForProgression"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="12dp"
                    android:text="MONITORA I TUOI PROGRESSI NEL TEMPO:"
                    android:textStyle="bold"
                    android:textColor="@color/lapis"
                    android:textSize="22sp"
                    android:gravity="center_horizontal"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- Divider sopra il testo introduttivo -->
                <View
                    android:id="@+id/dividerBeforeText"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginHorizontal="80dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/dark_gray"
                    app:layout_constraintTop_toBottomOf="@id/TitleForProgression"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- Testo introduttivo -->
                <TextView
                    android:id="@+id/testointroduzione"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:gravity="center"
                    android:lineSpacingExtra="2dp"
                    android:text="Monitora i tuoi progressi nel tempo\ngrazie ai grafici interattivi.\nVisualizza l'evoluzione delle tue performance,\nconfronta i dati delle ultime settimane\ne ottieni una panoramica chiara dei tuoi miglioramenti."
                    android:textSize="18sp"
                    app:layout_constraintTop_toBottomOf="@id/dividerBeforeText"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- Divider sotto il testo -->
                <View
                    android:id="@+id/dividerAfterText"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="80dp"
                    android:background="@color/dark_gray"
                    app:layout_constraintTop_toBottomOf="@id/testointroduzione"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- Spacer -->
                <View
                    android:id="@+id/spacerAfterText"
                    android:layout_width="0dp"
                    android:layout_height="16dp"
                    app:layout_constraintTop_toBottomOf="@id/dividerAfterText"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- CARD OBIETTIVO PESO CORPOREO -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardWeightGoal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="6dp"
                    app:cardUseCompatPadding="true"
                    app:cardBackgroundColor="@color/dark_gray"
                    app:layout_constraintTop_toBottomOf="@id/spacerAfterText"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            android:id="@+id/tvWeightGoalTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="IL TUO OBIETTIVO DI PESO"
                            android:textAllCaps="true"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:letterSpacing="0.05"
                            android:textColor="@color/purple_200" />

                        <EditText
                            android:id="@+id/etWeightGoalValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="—"
                            android:textSize="28sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white" />

                        <TextView
                            android:id="@+id/tvWeightGoalSubtitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="(kg obiettivo)"
                            android:textSize="12sp"
                            android:textColor="@android:color/darker_gray" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Spacer dopo peso -->
                <View
                    android:id="@+id/spacerAfterWeight"
                    android:layout_width="0dp"
                    android:layout_height="16dp"
                    app:layout_constraintTop_toBottomOf="@id/cardWeightGoal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- CARD OBIETTIVO MASSA MAGRA -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardLeanGoal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="6dp"
                    app:cardUseCompatPadding="true"
                    app:cardBackgroundColor="@color/dark_gray"
                    app:layout_constraintTop_toBottomOf="@id/spacerAfterWeight"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            android:id="@+id/tvLeanGoalTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="IL TUO OBIETTIVO DI MASSA MAGRA"
                            android:textAllCaps="true"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:letterSpacing="0.05"
                            android:textColor="@color/purple_200" />

                        <EditText
                            android:id="@+id/etLeanGoalValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="—"
                            android:textSize="28sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white" />

                        <TextView
                            android:id="@+id/tvLeanGoalSubtitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="(kg obiettivo)"
                            android:textSize="12sp"
                            android:textColor="@android:color/darker_gray" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Spacer dopo massa magra -->
                <View
                    android:id="@+id/spacerAfterLeanGoal"
                    android:layout_width="0dp"
                    android:layout_height="16dp"
                    app:layout_constraintTop_toBottomOf="@id/cardLeanGoal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- CARD OBIETTIVO BODYFAT -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardBodyFatGoal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="6dp"
                    app:cardUseCompatPadding="true"
                    app:cardBackgroundColor="@color/dark_gray"
                    app:layout_constraintTop_toBottomOf="@id/spacerAfterLeanGoal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            android:id="@+id/tvBodyFatGoalTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="IL TUO OBIETTIVO DI BODYFAT"
                            android:textAllCaps="true"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:letterSpacing="0.05"
                            android:textColor="@color/purple_200" />

                        <EditText
                            android:id="@+id/etBodyFatGoalValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="—"
                            android:textSize="28sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white" />

                        <TextView
                            android:id="@+id/tvBodyFatGoalSubtitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="(% obiettivo)"
                            android:textSize="12sp"
                            android:textColor="@android:color/darker_gray" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Pulsante Conferma obiettivi -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonConfirm"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="32dp"
                    android:backgroundTint="@color/purple_200"
                    app:cornerRadius="16dp"
                    android:text="modifica parametri"
                    app:layout_constraintTop_toBottomOf="@id/cardBodyFatGoal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <View
                    android:id="@+id/dividerForHeart"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="30dp"
                    android:background="@color/dark_gray"
                    app:layout_constraintTop_toBottomOf="@id/buttonConfirm"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/titleforHeart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Controlla il tuo battito cardiaco!"
                    android:textStyle="bold"
                    android:textSize="22dp"
                    android:layout_marginTop="20dp"
                    android:textAllCaps="true"
                    android:gravity="center_horizontal"
                    android:textColor="@color/lapis"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/dividerForHeart" />

                <TextView
                    android:id="@+id/descrizioneHeart"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/titleforHeart"
                    android:padding="22dp"
                    android:singleLine="false"
                    android:ellipsize="none"
                    android:scrollHorizontally="false"
                    android:inputType="textMultiLine"
                    android:text="Il grafico del battito cardiaco ti consente di visualizzare in tempo reale come il tuo cuore risponde allo sforzo, aiutandoti a mantenere l’intensità giusta per ogni fase dell’allenamento.\n\nLe tre fasce colorate rendono immediata l’interpretazione:\n• Blu (fino al 60 % FC max) – fase di riscaldamento e recupero, ideale per preparare il sistema cardiovascolare o per defaticare senza affaticare il cuore.\n• Verde (60–80 % FC max) – esercizio aerobico ottimale per migliorare resistenza e consumo di grassi, mantenendo un ritmo stabile e sicuro.\n• Rosso (oltre l’80 % FC max) – lavoro anaerobico e sprint, utile per potenziare la capacità esplosiva ma da dosare in brevi ripetute per evitare sovraccarichi.\n\nGrazie a questo monitoraggio costante puoi modulare velocità e pendenza, prevenire picchi eccessivi o cadute di performance, e costruire un allenamento più efficiente e sostenibile." />

                <TextView
                    android:id="@+id/titoloperconnessione"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:padding="22dp"
                    android:textColor="@color/purple_200"
                    android:textStyle="bold|italic"
                    android:text="Connetti un dispositivo indossabile per usufruire del servizio"
                    app:layout_constraintTop_toBottomOf="@+id/descrizioneHeart"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <Button
                    android:id="@+id/tvHeartRate"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="Effettua la connessione"
                    android:textSize="10sp"
                    android:layout_margin="16dp"
                    app:layout_constraintTop_toBottomOf="@id/titoloperconnessione"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnStopConnection"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:visibility="gone"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:padding="0dp"
                    android:backgroundTint="@color/semi_transparent_red"
                    android:textStyle="bold"
                    android:textSize="10dp"
                    android:textColor="@color/white"
                    android:text="stop"
                    app:cornerRadius="10dp"
                    app:layout_constraintTop_toTopOf="@id/tvHeartRate"
                    app:layout_constraintBottom_toBottomOf="@id/tvHeartRate"
                    app:layout_constraintStart_toEndOf="@id/tvHeartRate"
                    app:layout_constraintEnd_toEndOf="parent" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/heartAndBpmContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tvHeartRate"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="5dp"
                    android:elevation="20dp"
                    android:layout_marginStart="16dp">

                    <ImageView
                        android:id="@+id/ivHeartPulse"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:visibility="gone"
                        android:src="@drawable/ecg_heart_blue"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

                    <TextView
                        android:id="@+id/tvBpmValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-- bpm"
                        android:textSize="18sp"
                        android:visibility="gone"
                        android:layout_marginStart="8dp"
                        app:layout_constraintStart_toEndOf="@id/ivHeartPulse"
                        app:layout_constraintTop_toTopOf="@id/ivHeartPulse"
                        app:layout_constraintBottom_toBottomOf="@id/ivHeartPulse" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- Card con ECG -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardEcg"
                    android:layout_width="0dp"
                    android:layout_height="240dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    app:cardBackgroundColor="@color/dark_gray"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="6dp"
                    app:layout_constraintTop_toBottomOf="@id/tvHeartRate"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <FrameLayout
                        android:id="@+id/containerHeart"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clipToPadding="false">

                        <com.github.mikephil.charting.charts.LineChart
                            android:id="@+id/ecgChart"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:clipToPadding="false" />
                    </FrameLayout>
                </androidx.cardview.widget.CardView>

                <!-- Striscia cliccabile -->
                <LinearLayout
                    android:id="@+id/btnToggleDetails"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:background="@color/transparent"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingVertical="10dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:layout_constraintTop_toBottomOf="@id/cardEcg"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <TextView
                        android:id="@+id/tvToggleDetails"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Maggiori dettagli"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:layout_marginEnd="8dp" />

                    <ImageView
                        android:id="@+id/imgToggleArrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_arrow_down"
                        android:tint="@color/white" />
                </LinearLayout>

                <TextView
                    android:id="@+id/textforsecondgraph"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="22dp"
                    android:text="In questo grafico è possibile monitorare nel tempo la progressione del proprio battito cardiaco durante gli allenamenti. Una riduzione del battito cardiaco, a parità di esercizio e tipo di allenamento, indica un miglioramento della funzionalità cardiaca, grazie a un cuore che pompa il sangue in modo più efficiente."
                    android:layout_marginTop="20dp"
                    android:includeFontPadding="false"
                    android:breakStrategy="simple"
                    android:hyphenationFrequency="normal"
                    android:justificationMode="inter_word"
                    app:layout_constraintTop_toBottomOf="@id/btnToggleDetails"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- Card con grafico Daily Max HR -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardDailyMax"
                    android:layout_width="0dp"
                    android:layout_height="240dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    app:cardBackgroundColor="@color/dark_gray"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="6dp"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@id/textforsecondgraph"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/chartDailyMaxHr"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </androidx.cardview.widget.CardView>

                <!-- Divider after cards -->
                <View
                    android:id="@+id/dividerAfterCards"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="30dp"
                    android:background="@color/dark_gray"
                    app:layout_constraintTop_toBottomOf="@id/buttonConfirm"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- Titolo sezione composizione corporea -->
                <TextView
                    android:id="@+id/titleforbuttons"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:text="Composizione corporea :"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"
                    android:textColor="@color/lapis"
                    app:layout_constraintTop_toBottomOf="@id/cardDailyMax"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- CARD PESO (grafico) a tutta larghezza -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/buttonForWEIGHT"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_margin="20dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@color/dark_gray"
                    app:layout_constraintTop_toBottomOf="@id/titleforbuttons"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/pesoTitle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="PESO CORPOREO"
                            android:textStyle="bold"
                            android:textColor="@color/purple_200"
                            android:textSize="14sp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/pesoArrow"
                            app:layout_constraintHorizontal_bias="0" />

                        <TextView
                            android:id="@+id/pesoSubtitle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:text="- kg"
                            android:textSize="27sp"
                            android:textStyle="bold|italic"
                            android:textColor="@color/white"
                            android:maxLines="2"
                            app:layout_constraintTop_toBottomOf="@id/pesoTitle"
                            app:layout_constraintStart_toStartOf="@id/pesoTitle"
                            app:layout_constraintEnd_toStartOf="@+id/pesoArrow"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintVertical_bias="0.2" />

                        <ImageView
                            android:id="@+id/pesoArrow"
                            android:layout_width="34dp"
                            android:layout_height="34dp"
                            android:tint="@color/light_gray"
                            android:src="@drawable/baseline_navigate_next_24"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="1" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Guideline verticale al 50% -->
                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline_half"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.5" />

                <!-- CARD BODY FAT (metà sinistra) -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/buttonForBF"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="5dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@color/dark_gray"
                    app:layout_constraintTop_toBottomOf="@id/buttonForWEIGHT"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/guideline_half">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/bfTitle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="BODY FAT"
                            android:textStyle="bold"
                            android:textColor="@color/purple_200"
                            android:textSize="14sp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/bfArrow"
                            app:layout_constraintHorizontal_bias="0" />

                        <TextView
                            android:id="@+id/bfSubtitle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
