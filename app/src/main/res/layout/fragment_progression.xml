                            android:textSize="27sp"
                            android:textStyle="bold|italic"
                            android:textColor="@color/white"
                            android:maxLines="2"
                            app:layout_constraintTop_toBottomOf="@id/bfTitle"
                            app:layout_constraintStart_toStartOf="@id/bfTitle"
