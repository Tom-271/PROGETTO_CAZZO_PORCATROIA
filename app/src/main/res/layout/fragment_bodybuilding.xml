<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:layout_marginTop="60dp"
    android:clipToPadding="false"
    android:paddingBottom="80dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="25dp">

        <!-- PETTORALE -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardSection1"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_margin="15dp"
            android:clickable="true"
            android:focusable="true"
            android:onClick="toggleSection"
            app:cardCornerRadius="15dp"
            app:cardElevation="8dp"
            app:cardUseCompatPadding="true"
            app:cardPreventCornerOverlap="false"
            app:strokeColor="@color/black"
            app:strokeWidth="1dp"
            app:cardBackgroundColor="@android:color/transparent">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- Immagine di sfondo -->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/petto"/>

                <!-- Velo semi-trasparente nero -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#80000000"/>

                <!-- Titolo con shadow arancione -->
                <TextView
                    android:id="@+id/tvSection1"
                    style="@style/SectionTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="P   E   T   T   O   R   A   L   E"
                    android:textColor="@android:color/white"
                    android:shadowColor="@color/sky"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="25"/>
            </FrameLayout>
        </com.google.android.material.card.MaterialCardView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvSection1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:visibility="gone"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginHorizontal="50dp"
            android:background="@color/steel"/>

        <!-- SEZIONE SPALLE -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardSection2"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_margin="15dp"
            android:clickable="true"
            android:focusable="true"
            android:onClick="toggleSection"
            app:cardCornerRadius="15dp"
            app:cardElevation="8dp"
            app:cardUseCompatPadding="true"
            app:cardPreventCornerOverlap="false"
            app:strokeColor="@color/black"
            app:strokeWidth="1dp"
            app:cardBackgroundColor="@android:color/transparent">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/spalle"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#80000000"/>

                <TextView
                    android:id="@+id/tvSection2"
                    style="@style/SectionTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="D   E   L   T   O   I   D   E"
                    android:textColor="@android:color/white"
                    android:shadowColor="@color/sky"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="25"/>
            </FrameLayout>
        </com.google.android.material.card.MaterialCardView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvSection2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:visibility="gone"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginHorizontal="50dp"
            android:background="@color/steel"/>

        <!-- SEZIONE SCHIENA -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardSection3"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_margin="15dp"
            android:clickable="true"
            android:focusable="true"
            android:onClick="toggleSection"
            app:cardCornerRadius="15dp"
            app:cardElevation="8dp"
            app:cardUseCompatPadding="true"
            app:cardPreventCornerOverlap="false"
            app:strokeColor="@color/black"
            app:strokeWidth="1dp"
            app:cardBackgroundColor="@android:color/transparent">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/schiena"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#80000000"/>

                <TextView
                    android:id="@+id/tvSection3"
                    style="@style/SectionTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="D   O   R   S   A   L  E"
                    android:textColor="@android:color/white"
                    android:shadowColor="@color/sky"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="25"/>
            </FrameLayout>
        </com.google.android.material.card.MaterialCardView>



        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvSection3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:visibility="gone"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginHorizontal="50dp"
            android:background="@color/steel"/>

        <!-- SEZIONE GAMBE -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardSection4"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_margin="15dp"
            android:clickable="true"
            android:focusable="true"
            android:onClick="toggleSection"
            app:cardCornerRadius="15dp"
            app:cardElevation="8dp"
            app:cardUseCompatPadding="true"
            app:cardPreventCornerOverlap="false"
            app:strokeColor="@color/black"
            app:strokeWidth="1dp"
            app:cardBackgroundColor="@android:color/transparent">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/gambe"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#80000000"/>

                <TextView
                    android:id="@+id/tvSection4"
                    style="@style/SectionTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="G   A   M   B   E"
                    android:textColor="@android:color/white"
                    android:shadowColor="@color/sky"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="25"/>
            </FrameLayout>
        </com.google.android.material.card.MaterialCardView>



        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvSection4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:visibility="gone"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginHorizontal="50dp"
            android:background="@color/steel"/>
        <!-- SEZIONE BICIPITI -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardSection5"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_margin="15dp"
            android:clickable="true"
            android:focusable="true"
            android:onClick="toggleSection"
            app:cardCornerRadius="15dp"
            app:cardElevation="8dp"
            app:cardUseCompatPadding="true"
            app:cardPreventCornerOverlap="false"
            app:strokeColor="@color/black"
            app:strokeWidth="1dp"
            app:cardBackgroundColor="@android:color/transparent">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/petto"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#80000000"/>

                <TextView
                    android:id="@+id/tvSection5"
                    style="@style/SectionTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="B   I   C   I   P   I   T   I"
                    android:textColor="@android:color/white"
                    android:shadowColor="@color/sky"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="25"/>
            </FrameLayout>
        </com.google.android.material.card.MaterialCardView>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginHorizontal="50dp"
            android:background="@color/steel"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvSection5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:visibility="gone"/>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
