<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="100dp"
    android:padding="16dp">


    <!-- Il calendario, vincolato in alto e sopra al button -->

    <TextView
        android:id="@+id/instruction"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="50dp"
        android:text="Seleziona una data!"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent" />

    <CalendarView
        android:id="@+id/calendarView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@+id/instruction"
        app:layout_constraintBottom_toTopOf="@+id/btnFancy"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- MaterialButton con angoli arrotondati -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnFancy"
        android:layout_width="280dp"
        android:layout_height="80dp"
        android:layout_marginBottom="124dp"
        android:paddingVertical="12dp"
        android:backgroundTint="@color/navy_blue"
        android:text="Visualizza la tua scheda!"
        android:visibility="invisible"
        app:strokeColor="@color/orange"
        app:strokeWidth="0.6dp"
        android:textColor="@color/white"
        app:cornerRadius="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
