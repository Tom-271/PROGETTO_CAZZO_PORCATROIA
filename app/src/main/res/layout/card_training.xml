<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/detailCard"
        android:layout_width="wrap_content"
        android:layout_height="650dp"
        android:layout_gravity="center"
        android:tag="card_training"
        app:cardCornerRadius="28dp"
        app:cardElevation="20dp">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/detailCardInner"
            android:layout_width="370dp"
            android:layout_height="match_parent"
            app:cardBackgroundColor="?attr/colorSurface"
            app:strokeColor="?attr/colorOnSurface"
            app:strokeWidth="0.8dp"
            app:cardCornerRadius="28dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp">

                <!-- Close Button -->
                <ImageButton
                    android:id="@+id/buttonExit"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/chiusura"
                    app:tint="?attr/colorOnSurface"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <!-- Exercise Title and Image -->
                <LinearLayout
                    android:id="@+id/eserciseInfo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:paddingTop="0dp"
                    app:layout_constraintTop_toBottomOf="@id/buttonExit"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <TextView
                        android:id="@+id/eserciseName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="nome esercizio"
                        android:textAlignment="center"
                        android:textColor="?attr/colorOnSurface"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                        android:fontFamily="sans-serif-medium" />

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/exerciseImage"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:layout_marginTop="6dp"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        app:strokeColor="?attr/colorOnSurface"
                        app:strokeWidth="0.6dp" />
                </LinearLayout>

                <!-- Divider -->
                <com.google.android.material.divider.MaterialDivider
                    android:id="@+id/dividerTop"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:alpha="0.6"
                    app:dividerColor="?attr/colorOnSurface"
                    app:layout_constraintTop_toBottomOf="@id/eserciseInfo"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="4dp" />

                <!-- SET / REPS / DESCRIZIONE -->
                <LinearLayout
                    android:id="@+id/trainingCard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@id/dividerTop"
                    app:layout_constraintBottom_toTopOf="@id/BottomButtons"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <!-- SET + WEIGHT -->
                    <LinearLayout
                        android:id="@+id/linea1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:weightSum="2">

                        <!-- SET -->
                        <LinearLayout
                            android:id="@+id/trainingSet"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp"
                            android:background="?attr/selectableItemBackground"
                            android:minHeight="40dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="SET"
                                android:textColor="?attr/colorOnSurface"
                                android:alpha="0.72"
                                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1" />

                            <TextView
                                android:id="@+id/exerciseSet"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAlignment="center"
                                android:textColor="?attr/colorOnSurface"
                                android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                                android:fontFamily="sans-serif-medium" />
                        </LinearLayout>

                        <!-- WEIGHT -->
                        <LinearLayout
                            android:id="@+id/trainingWeight"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp"
                            android:background="?attr/selectableItemBackground"
                            android:minHeight="40dp">

                            <TextView
                                android:id="@+id/textWeight"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="WEIGHT"
                                android:textColor="?attr/colorOnSurface"
                                android:alpha="0.72"
                                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1" />

                            <TextView
                                android:id="@+id/exerciseWeight"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAlignment="center"
                                android:textColor="?attr/colorOnSurface"
                                android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                                android:fontFamily="sans-serif-medium" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- REPS + RECOVER -->
                    <LinearLayout
                        android:id="@+id/linea2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="6dp"
                        android:weightSum="2">

                        <!-- REPS -->
                        <LinearLayout
                            android:id="@+id/trainingReps"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp"
                            android:background="?attr/selectableItemBackground"
                            android:minHeight="40dp">

                            <TextView
                                android:id="@+id/TextReps"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="REPS"
                                android:textColor="?attr/colorOnSurface"
                                android:alpha="0.72"
                                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1" />

                            <TextView
                                android:id="@+id/exerciseReps"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAlignment="center"
                                android:textColor="?attr/colorOnSurface"
                                android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                                android:fontFamily="sans-serif-medium" />
                        </LinearLayout>

                        <!-- RECOVER -->
                        <LinearLayout
                            android:id="@+id/trainingRecover"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp"
                            android:background="?attr/selectableItemBackground"
                            android:minHeight="40dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="RECOVER"
                                android:textColor="?attr/colorOnSurface"
                                android:alpha="0.72"
                                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1" />

                            <TextView
                                android:id="@+id/exerciseRecover"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAlignment="center"
                                android:textColor="?attr/colorOnSurface"
                                android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                                android:fontFamily="sans-serif-medium" />
                        </LinearLayout>
                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/buttonMore"
                        style="@style/RoundedButtonStyle"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_margin="10dp"

                        android:text="Di più..."
                        android:textColor="?attr/colorOnSurface"
                        android:fontFamily="sans-serif"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <!-- Optional List -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerTrainingLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:maxHeight="120dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/trainingSetAbove"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:minHeight="48dp"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@id/eserciseInfo"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/stepwatch_container">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="SET"
                        android:textColor="?attr/colorOnSurface"
                        android:alpha="0.72"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1" />

                    <TextView
                        android:id="@+id/exerciseSetAbove"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textColor="?attr/colorOnSurface"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                        android:fontFamily="sans-serif-medium" />
                </LinearLayout>

                <!-- TIMER -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/stepwatch_container"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    app:layout_constraintTop_toBottomOf="@id/dividerTop"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/BottomButtons">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/card_clock"
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardCornerRadius="110dp"
                        app:cardElevation="14dp"
                        app:cardUseCompatPadding="false"
                        app:cardPreventCornerOverlap="true"
                        app:cardBackgroundColor="?attr/colorPrimary"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="8dp">

                        <TextView
                            android:id="@+id/textStepwatch"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textColor="@android:color/white"
                            android:text="00:30"
                            android:textSize="32sp"
                            android:textStyle="bold"
                            android:letterSpacing="0.1"
                            android:clickable="true"
                            android:focusable="true" />
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.progressindicator.CircularProgressIndicator
                        android:id="@+id/progressTimer"
                        style="@style/Widget.MaterialComponents.CircularProgressIndicator"
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        android:clickable="false"
                        android:focusable="false"
                        android:indeterminate="false"
                        android:max="30"
                        android:progress="30"
                        android:elevation="18dp"
                        app:indicatorSize="180dp"
                        app:indicatorInset="0dp"
                        app:indicatorColor="?attr/colorSecondary"
                        app:trackColor="@android:color/transparent"
                        app:layout_constraintTop_toTopOf="@id/card_clock"
                        app:layout_constraintBottom_toBottomOf="@id/card_clock"
                        app:layout_constraintStart_toStartOf="@id/card_clock"
                        app:layout_constraintEnd_toEndOf="@id/card_clock" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- Divider -->
                <com.google.android.material.divider.MaterialDivider
                    android:id="@+id/dividerBottom"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:alpha="0.6"
                    app:dividerColor="?attr/colorOnSurface"
                    app:layout_constraintBottom_toTopOf="@id/BottomButtons"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- Bottom Buttons -->
                <LinearLayout
                    android:id="@+id/BottomButtons"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="12dp"
                    android:gravity="center_horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/EndExercise"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Termina serie"
                        android:textAllCaps="false"
                        android:textStyle="bold"
                        app:cornerRadius="18dp" />
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>
    </com.google.android.material.card.MaterialCardView>
</FrameLayout>
