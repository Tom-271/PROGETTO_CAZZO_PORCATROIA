<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212">

    <!-- Scrollable content -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scrollbars="none"
        android:fadeScrollbars="true"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Titolo -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Workouts"
                android:textSize="34sp"
                android:paddingTop="90dp"
                android:textStyle="bold"
                android:textColor="@android:color/white" />

            <!-- Sottotitolo -->
            <TextView
                android:id="@+id/subtitlePPPPPPPPROOOOOVA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PPPPPPPPROOOOOVA"
                android:textSize="16sp"
                android:textAllCaps="true"
                android:textColor="#80B6E3"
                android:layout_marginTop="8dp" />

            <!-- Spaziatore -->
            <View
                android:layout_width="match_parent"
                android:layout_height="24dp" />

            <!-- Sezione: Bodybuilding -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/rounded_card"
                android:padding="16dp"
                android:layout_marginBottom="12dp">

                <Button
                    android:id="@+id/btnBodybuilding"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="PESI"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:shadowColor="@color/yellow"
                    android:shadowRadius="5"
                    android:background="@android:color/transparent"
                    android:gravity="start" />

                <TextView
                    android:id="@+id/subtitleBodyBuilding"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 exercises"
                    android:textColor="#888888"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp" />

                <LinearLayout
                    android:id="@+id/bodybuildingDetailsContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <!-- Sezione: Cardio -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/rounded_card"
                android:padding="16dp"
                android:layout_marginBottom="12dp">

                <Button
                    android:id="@+id/btnCardio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cardio"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:shadowColor="@color/yellow"
                    android:shadowRadius="5"
                    android:background="@android:color/transparent"
                    android:gravity="start" />

                <TextView
                    android:id="@+id/subtitleStretching"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 exercises"
                    android:textColor="#888888"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp" />

                <LinearLayout
                    android:id="@+id/stretchingDetailsContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <!-- Sezione: Corpo Libero -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/rounded_card"
                android:padding="16dp"
                android:layout_marginBottom="12dp">

                <Button
                    android:id="@+id/btnCorpoLibero"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="corpo libero"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:shadowColor="@color/yellow"
                    android:shadowRadius="5"
                    android:background="@android:color/transparent"
                    android:gravity="start" />

                <TextView
                    android:id="@+id/subtitleCardio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 exercises"
                    android:textColor="#888888"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp" />

                <LinearLayout
                    android:id="@+id/cardioDetailsContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <!-- Sezione: Stretching -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/rounded_card"
                android:padding="16dp"
                android:paddingBottom="30dp"
                android:layout_marginBottom="12dp">

                <Button
                    android:id="@+id/btnStretching"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="stretching"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:shadowColor="@color/yellow"
                    android:shadowRadius="5"
                    android:background="@android:color/transparent"
                    android:gravity="start" />

                <TextView
                    android:id="@+id/subtitleCorpoLibero"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 exercises"
                    android:textColor="#888888"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp" />

                <LinearLayout
                    android:id="@+id/corpoliberoDetailsContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <!-- Pulsante “Riempila ora!” -->
            <Button
                android:id="@+id/btnFillSchedule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Creala adesso!"
                android:visibility="gone"
                android:layout_marginBottom="24dp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
