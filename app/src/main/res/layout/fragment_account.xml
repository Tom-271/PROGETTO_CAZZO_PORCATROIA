<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/account_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="40dp"
    tools:context="com.example.progetto_tosa.ui.account.AccountFragment">

    <!-- Icona utente -->
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iconaUtente"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/account"
        android:scaleType="centerCrop"
        android:clipToOutline="true"
        app:strokeWidth="10dp"
        app:strokeColor="@color/sky"
        app:shapeAppearanceOverlay="@style/CircleImage"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Switch
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        android:text="Disable Dark mode"
        app:layout_constraintTop_toBottomOf="@id/iconaUtente"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="UseSwitchCompatOrMaterialXml" />

    <!-- Nome utente -->
    <TextView
        android:id="@+id/NomeUtente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="NOME UTENTE"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/iconaUtente"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Dettagli utente (nascosti) -->
    <TextView
        android:id="@+id/tvFirstLast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Nome e Cognome:"
        android:textColor="@color/white"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@id/NomeUtente"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Email:"
        android:textColor="@color/white"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/tvFirstLast"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvBirthday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Data di nascita:"
        android:textColor="@color/white"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/tvEmail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="EtÃ :"
        android:textColor="@color/white"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/tvBirthday"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Peso:"
        android:textColor="@color/white"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/tvAge"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvHeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Altezza:"
        android:textColor="@color/white"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/tvWeight"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Primo gruppo di bottoni (in alto) -->
    <LinearLayout
        android:id="@+id/buttonsContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toBottomOf="@id/tvHeight"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- I miei dati -->
        <Button
            android:id="@+id/UserData"
            android:layout_marginTop="20dp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            app:strokeWidth="1dp"
            app:cornerRadius="10dp"
            android:backgroundTint="@color/orange"
            android:layout_gravity="center_horizontal"
            app:strokeColor="@color/dark_gray"
            android:text="I miei dati"/>

        <!-- I miei programmi / Il mio percorso -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/UserProgram"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                app:strokeWidth="1dp"
                app:cornerRadius="10dp"
                android:backgroundTint="@color/sky"
                app:strokeColor="@color/dark_gray"
                android:text="I miei programmi"/>

            <Button
                android:id="@+id/UserJourney"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                app:strokeWidth="1dp"
                app:cornerRadius="10dp"
                android:backgroundTint="@color/sky"
                app:strokeColor="@color/dark_gray"
                android:text="Il mio percorso"/>
        </LinearLayout>
    </LinearLayout>

    <!-- TrainerProgram -->
    <Button
        android:id="@+id/TrainerProgram"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:strokeWidth="1dp"
        app:cornerRadius="10dp"
        android:visibility="gone"
        android:backgroundTint="@color/semi_transparent_red"
        app:strokeColor="@color/dark_gray"
        app:layout_constraintTop_toBottomOf="@id/buttonsContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textStyle="bold"
        android:textSize="30dp"
        android:text="I TUOI ALLIEVI"/>

    <!-- subito sotto il TextView NomeUtente -->
    <TextView
        android:id="@+id/tvPTStatus1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ciao,"
        android:textSize="16sp"
        android:textStyle="italic"
        android:textColor="@android:color/white"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/NomeUtente"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- subito sotto il TextView NomeUtente -->
    <TextView
        android:id="@+id/tvPTStatus2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sei pronto ad allenare?"
        android:textSize="16sp"
        android:textStyle="italic"
        android:textColor="@android:color/white"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/NomeUtente"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Logout + Login incollati al fondo -->
    <LinearLayout
        android:id="@+id/bottomButtons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="6dp"
        app:layout_constraintTop_toBottomOf="@id/TrainerProgram"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/sign_out"
            android:layout_width="0dp"
            android:layout_marginBottom="6dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Logout"/>

        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/shimmerLogin"
            android:layout_width="0dp"
            android:layout_marginBottom="6dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/ButtonLogin"
                style="@style/Widget.App.LoginButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="LOGIN"/>
        </com.facebook.shimmer.ShimmerFrameLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
