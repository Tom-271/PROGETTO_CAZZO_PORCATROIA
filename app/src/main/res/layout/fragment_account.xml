<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/account_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.progetto_tosa.ui.account.AccountFragment">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iconaUtente"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/account"
        android:scaleType="centerCrop"
        android:clipToOutline="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:strokeWidth="10dp"
        app:strokeColor="@color/sky"
        app:shapeAppearanceOverlay="@style/CircleImage" />

    <TextView
        android:id="@+id/NomeUtente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="NOME UTENTE"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/iconaUtente"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Nuove TextView per i dettagli utente (nascoste di default) -->
    <TextView
        android:id="@+id/tvFirstLast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome e Cognome: "
        android:visibility="gone"
        android:layout_marginTop="8dp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/NomeUtente"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email: "
        android:visibility="gone"
        android:layout_marginTop="4dp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/tvFirstLast"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvBirthday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data di nascita: "
        android:visibility="gone"
        android:layout_marginTop="4dp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/tvEmail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EtÃ : "
        android:visibility="gone"
        android:layout_marginTop="4dp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/tvBirthday"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Peso: "
        android:visibility="gone"
        android:layout_marginTop="4dp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/tvAge"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvHeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Altezza: "
        android:visibility="gone"
        android:layout_marginTop="4dp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/tvWeight"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/myCardView"
        android:layout_width="300dp"
        android:layout_height="325dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/NomeUtente"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <Button
                android:id="@+id/UserData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="I miei dati" />

            <Button
                android:id="@+id/UserProgram"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="I miei programmi" />

            <Button
                android:id="@+id/UserJourney"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Il mio percorso" />

            <Button
                android:id="@+id/UserProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Profilo" />

            <Button
                android:id="@+id/Settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Impostazioni" />

            <Button
                android:id="@+id/sign_out"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:text="Logout" />

            <Button
                android:id="@+id/ButtonLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="LOGIN" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
