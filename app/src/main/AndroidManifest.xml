<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- BLE base (vecchi permessi utili < API 31; metti maxSdkVersion per evitare warning) -->
    <uses-permission android:name="android.permission.BLUETOOTH" android:maxSdkVersion="30"/>
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" android:maxSdkVersion="30"/>

    <!-- BLE moderni (API 31+) -->
    <uses-permission
        android:name="android.permission.BLUETOOTH_SCAN"
        android:usesPermissionFlags="neverForLocation"/>
    <uses-permission android:name="android.permission.BLUETOOTH_CONNECT"/>

    <!-- Per lo scan su < API 31 serve anche la location -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>

    <!-- Foreground service (obbligatorio per i service in primo piano) -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE"/>
    <!-- Notifiche (Android 13+) -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS"/>

    <!-- Altri permessi dellâ€™app -->
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_CALENDAR"/>
    <uses-permission android:name="android.permission.WRITE_CALENDAR"/>
    <uses-permission android:name="android.permission.CAMERA"/>

    <!-- Hardware BLE -->
    <uses-feature android:name="android.hardware.bluetooth_le" android:required="true"/>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PROGETTO_TOSA"
        tools:targetApi="31">

        <!-- DICHIARAZIONE DEL SERVICE (path esatto del tuo file) -->
        <service
            android:name=".ui.progression.BleHrService"
            android:exported="false"
            android:foregroundServiceType="connectedDevice|dataSync" />

        <!-- Schermate di login/registrazione -->
        <activity
            android:name=".ui.login.LoginWithGoogle"
            android:exported="false"
            android:label="@string/title_activity_login_with_google" />
        <activity
            android:name=".ui.login.LoginWithEmailActivity"
            android:exported="false"
            android:label="@string/title_activity_login_with_email" />
        <activity android:name=".ui.account.LoginWithEmail" />
        <activity
            android:name=".ui.account.LoginWithGoogle"
            tools:ignore="Instantiatable" />

        <!-- MainActivity -->
        <activity
            android:name=".ui.account.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Registrazione -->
        <activity
            android:name=".ui.account.RegisterActivity"
            android:screenOrientation="portrait" />
    </application>
</manifest>
