<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">


    <!-- ShapeAppearance per angoli arrotondati in alto -->
    <style name="ShapeAppearance.TopRounded" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">10dp</item>
        <item name="cornerSizeTopRight">10dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <!-- ShapeAppearance per angoli arrotondati in basso -->
    <style name="ShapeAppearance.BottomRounded" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomLeft">10dp</item>
        <item name="cornerSizeBottomRight">10dp</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
    </style>

    <!-- Bottone arrotondato in basso -->
    <style name="RoundedButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/sky</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.BottomRounded</item>
        <item name="rippleColor">?attr/colorControlHighlight</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:elevation">50dp</item>
    </style>

    <!-- Titolo di sezione -->
    <style name="SectionTitle" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">25dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">google_sans_regular</item>
        <item name="fontFamily">sans-google_sans_regular</item>
        <item name="android:gravity">top|center_horizontal</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <!-- Dialog trasparente -->
    <style name="Theme.TransparentDialog" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <!-- rende traslucido il dialog -->
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
    </style>



    <!-- Indicatori a puntini per TabLayout -->
    <style name="Exercise.DotIndicator" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabRippleColor">@null</item>
        <item name="tabIndicatorFullWidth">false</item>
        <item name="tabMode">fixed</item>
        <item name="tabGravity">center</item>
    </style>

    <!-- mi serve per l'icona circolare account -->
    <style name="CircleImage" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>



</resources>
